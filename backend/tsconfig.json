{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "rewriteRelativeImportExtensions": true
  },
  "include": ["src/**/*", "src/middleware"],
  "exclude": ["node_modules"]
}